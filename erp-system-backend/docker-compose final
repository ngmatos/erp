version: '3.8'

services:
  mysql:
    image: mysql:latest
    container_name: mysql-container
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: erp2024
      MYSQL_DATABASE: erp_db
    ports:
      - "3306:3306"
    volumes:
      - ./create_tables.sql:/docker-entrypoint-initdb.d/create_tables.sql
    networks:
      - erp-network

  app:
    build:
      context: ./erp-system-backend
      dockerfile: Dockerfile
    container_name: app-container
    depends_on:
      - mysql
    environment:
      SPRING_DATASOURCE_URL: jdbc:mysql://mysql-container:3306/erp_db
      SPRING_DATASOURCE_USERNAME: root
      SPRING_DATASOURCE_PASSWORD: erp2024
      SPRING_DATASOURCE_DRIVER_CLASS_NAME: com.mysql.cj.jdbc.Driver
    ports:
      - "8080:8080"
    networks:
      - erp-network
    command: ["dockerize", "-wait", "tcp://mysql-container:3306", "-timeout", "60s", "java", "-jar", "/app/erp-system.jar"]

  frontend:
      build:
        context: ./erp-system-frontend
        dockerfile: Dockerfile
      container_name: frontend-container
      depends_on:
        - backend
      ports:
        - "3000:3000"
      networks:
        - erp-network
      environment:
        - REACT_APP_BACKEND_URL=http://localhost:8080/api


networks:
  erp-network:
    driver: bridge
